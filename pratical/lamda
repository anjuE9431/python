# Lambda function to calculate area of a square
area_square = lambda side: side ** 2

# Lambda function to calculate area of a rectangle
area_rectangle = lambda length, width: length * width

# Lambda function to calculate area of a triangle
area_triangle = lambda base, height: 0.5 * base * height

# Test the functions
side = 5
length = 6
width = 4
base = 8
height = 3

print(f"Area of square with side {side} is: {area_square(side)}")
print(f"Area of rectangle with length {length} and width {width} is: {area_rectangle(length, width)}")
print(f"Area of triangle with base {base} and height {height} is: {area_triangle(base, height)}")
